node {
    stage('checkout') {
        git branch: 'main', 
        url: 'https://github.com/praveenashapuredb/spring-petclinic.git'    
    }
    stage('build') {
        sh '''source ~/.bash_profile
        mvn package'''    
    }
    stage('archive') {
        archiveArtifacts artifacts: 'target/*.jar', 
        followSymlinks: false   
    }
    step([$class: 'JUnitResultArchiver', checksName: '', stdioRetention: 'ALL', testResults: '/target/surefire-reports/*.xml'])
    sendmail(Completed)
}

def sendmail(status) {
        emailext body: "Hey I am sending email", 
        subject: "About build '${status}' job '${env.JOB_NAME}'",
        to: "praveen_ashapure@epam.com"
}